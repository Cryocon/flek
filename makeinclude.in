prefix		=@prefix@
exec_prefix	=@exec_prefix@
bindir		=@bindir@
includedir	=@includedir@
libdir		=@libdir@
srcdir		=@srcdir@
VPATH		=@srcdir@

# compiler names:
CXX		=@CXX@
CC		=@CC@
MAKEDEPEND	=@MAKEDEPEND@

# flags for C++ compiler:
CFLAGS		=@CFLAGS@ @FLTKFLAGS@ @HAVEGL@
CXXFLAGS	=@CXXFLAGS@ @FLTKFLAGS@ @HAVEGL@

FLTKDIR = @FLTKDIR@
FLTKLIB = @GLLIBPATH@ @FLTKLIB@ 
FLTKINC = @GLINCPATH@ @FLTKINC@ 

XMLLIB = @XMLLIBPATH@
XMLINC = @XMLINCPATH@

LIBNAMECORE	=@LIBNAMECORE@
LIBNAMEUI	=@LIBNAMEUI@
LIBNAMEGL	=@LIBNAMEGL@

DSOLIBNAMECORE	=@DSOLIBNAMECORE@
DSOLIBNAMEUI	=@DSOLIBNAMEUI@
DSOLIBNAMEGL	=@DSOLIBNAMEGL@

LIBCOMMAND	=@LIBCOMMAND@
RANLIB		=@RANLIB@
DSOEXT		=@DSOEXT@
DSOCOMMAND	=@DSOCOMMAND@

# libraries to link with:
LDLIBS		=@LDFLAGS@ @LIBS@ -L/usr/X11R6/lib $(FLTKLIB) -lfltk -lX11 -lXext $(XMLLIB) -lxml @X_EXTRA_LIBS@ -lm -ldl

