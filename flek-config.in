#! /bin/sh
# 
# flek-config
#
# by James Dean Palmer
#
# "$Id: flek-config.in,v 1.1 2000/02/10 18:17:02 jamespalmer Exp $"
#

MAJOR_VERSION=2
MINOR_VERSION=0
PATCH_VERSION=0
VERSION="$MAJOR_VERSION.$MINOR_VERSION.$PATCH_VERSION"

### BEGIN fltk-config

# Calculate the prefix from the location of *this* file
prefix=`echo "$0" | sed 's/\/bin\/flek-config//
s/\/flek-config//'`

#prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no
bindir=@bindir@
includedir=@includedir@
libdir=@libdir@
srcdir=@srcdir@

# compiler names
CXX="@CXX@"
CC="@CC@"

# flags for C++ compiler:
CFLAGS="@CFLAGS@"
CXXFLAGS="@CXXFLAGS@ @X_CFLAGS@"

# program to make the archive:
LIBNAME="@LIBNAME@"
LIBCOMMAND="@LIBCOMMAND@"
RANLIB="@RANLIB@"
DSONAME="@DSONAME@"
DSOCOMMAND="@DSOCOMMAND@"

# flags for the linker
LD_PLUGIN_FLAGS="@LD_PLUGIN_FLAGS@"

# programs to make archive and build DSOs
RANLIB="@RANLIB@"
DSOCOMMAND="@DSOCOMMAND@"
EXPORTCOMMAND="@EXPORTCOMMAND@"

usage ()
{
    echo "Usage: flek-config [OPTIONS]
Options:
	[--prefix[=DIR]]  return/set where FLEK is installed
	[--exec-prefix[=DIR]]
	[--version]

options telling what we are doing :
	[--use-core]      use core library (default) (libflek_core)
	[--use-ui]        use user interface library (libflek_ui)
	[--use-gl]        use OpenGL library (libflek_gl)

options telling what information we request
	[--cflags]        return flags to compile C using FLTK
	[--cxxflags]      return flags to compile C++ using FLTK
	[--ldflags]       return flags to link against FLTK
	[--ldstaticflags] return flags to link against static FLTK library
                                          even if there are DSOs installed
	[--libs]          return FLTK libraries full path for dependencies
"
    exit $1
}

if test $# -eq 0; then usage 1
fi

no_plugins=no

# Parse command line options
while test $# -gt 0 
do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo $VERSION
      ;;
    --use-gl)
      use_gl=yes
      ;;
    --use-core)
      use_core=yes
      ;;
    --use-ui)
      use_ui=yes
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --cxxflags)
      echo_cxxflags=yes
      ;;
    --ldflags)
      echo_ldflags=yes
      ;;
    --ldstaticflags)
      echo_ldstaticflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    *)
      echo_help=yes
      ;;
  esac
  shift
done

# Calculate needed libraries
LDLIBS=""
LDSTATIC=""
LIBS=""
if test "$use_ui" = "yes"; then
    LDLIBS="$LDLIBS -lflek_ui"
    LDSTATIC="$LDSTATIC $prefix/lib/libflek_ui.a"
    LIBS="$LIBS $prefix/lib/libflek_ui.a"
fi
if test "$use_gl" = "yes"; then
    LDLIBS="$LDLIBS -lflek_gl @GLLIB@"
    LDSTATIC="$LDSTATIC $prefix/lib/libflek_gl.a @GLLIB@"
    LIBS="$LIBS $prefix/lib/libflek_gl.a"
fi
LDLIBS="$LDLIBS -lflek_core @LDFLAGS@ @LIBS@ @LDLIBS@ @X_EXTRA_LIBS@ -lm"
LDSTATIC="$LDSTATIC $prefix/lib/libflek_core.a @LDFLAGS@ @LIBS@ @LDLIBS@ @X_EXTRA_LIBS@ -lm"
LIBS="$LIBS $prefix/lib/libflek_core.a"

# Answer to user requests
if test -n "$echo_help"; then usage 1
fi

if test "$echo_prefix" = "yes"; then
        echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
        echo $exec_prefix
fi

if test "$echo_cflags" = "yes"; then
      includes=-I`echo "$0" | sed 's/\/bin\/flek-config/\/include/
s/\/flek-config//'`
      echo $includes $CFLAGS
fi

if test "$echo_cxxflags" = "yes"; then
      includes=-I`echo "$0" | sed 's/\/bin\/flek-config/\/include/
s/\/flek-config//'`
      echo $includes $CXXFLAGS
fi

if test "$echo_ldflags" = "yes"; then
      my_libs=
      libdirs=-L${exec_prefix}/lib
      for i in $LDLIBS ; do
        if test $i != -L${exec_prefix}/lib ; then
          if test -z "$my_libs" ; then
            my_libs="$i"
          else
            my_libs="$my_libs $i"
          fi
        fi
      done
      echo $libdirs $my_libs
fi

if test "$echo_ldstaticflags" = "yes"; then
      echo $LDSTATIC
fi

if test "$echo_libs" = "yes"; then
      echo $LIBS
fi

# END of flek-config
